@model DailyExpense
@{
    ViewData["Title"] = "Update";
}
<div class="container mb-2">
    <div class="row">
        <div class="col-12">
            <h3>Update Expense:</h3>

            <form method="post" asp-action="Update" asp-controller="DailyExpenses" asp-route-DailyExpenseId="@Model.DailyExpenseId"  id="FormAJ">
                <div class="form-group row mb-2">
                    <label asp-for="ExpenseDate" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="ExpenseDate" class="form-control form-control-sm" placeholder="Enter Expense Date" />
                        <span asp-validation-for="ExpenseDate" class="text-danger" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-form-label col-form-label-sm col-2">Expense Catgory</label>
                    <div class="col-6">
                        <select type="text" class="form-select form-select-sm" asp-for="ExpenseCategoryId"
                                asp-items="@(new SelectList(ViewBag.Categories, "ExpenseCategoryId", "CategoryName"))">
                            <option value="">Select One</option>
                        </select>
                        <span asp-validation-for="ExpenseCategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label asp-for="Amount" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input type="text" asp-for="Amount" class="form-control form-control-sm" placeholder="Enter Expense Amount" />
                        <span asp-validation-for="Amount" class="text-danger" />
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <div class="col-4 offset-2">
                        
                        <button type="submit" class="btn btn-success">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="DailyExpenses"><i class="fa fa-backward"></i>Back to Index</a>
        </div>
    </div>
</div>
@section styles {
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.standalone.css" rel="stylesheet" />
    <link href="~/lib/Custom Design/main.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/lib/jquery/jquery.min.js"></script>    
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script>
        $("#ExpenseDate").datepicker({
            format: 'yyyy-mm-dd'
        });
        
    </script>
}



