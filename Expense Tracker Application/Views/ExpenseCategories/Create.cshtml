@model ExpenseCategory
@{
    ViewData["Title"] = "Create";
}
<div class="container mb-2">
    <div class="row">
        <div class="col-12">
            <h3>Create Expense Category:</h3>
            <div id="placeholder"></div>
            <div class="row my-1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <form method="post" asp-action="Create" asp-controller="ExpenseCategories" id="FormAJ"
                  data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#placeholder" data-ajax-success="onSuccess">

                <div class="form-group row mb-2">
                    <label asp-for="CategoryName" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-6">
                        <input type="text" asp-for="CategoryName" class="form-control form-control-sm" placeholder="Enter Category Name" />
                        <span asp-validation-for="CategoryName" class="text-danger" />
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <div class="col-10 offset-2">
                        <button type="reset" class="btn btn-secondary">Reset</button>
                        <button type="submit" class="btn btn-success">Create</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="ExpenseCategories"><i class="fa fa-backward"></i>Back to Index</a>
        </div>
    </div>
</div>
@section styles {
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/Custom Design/main.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        function onSuccess() {
            $("#FormAJ").trigger('reset');
        }
    </script>
}



